# ESP32 BLE Gateway Backend Configuration
# Copy this file to .env and modify as needed

# ============ MQTT Configuration ============
BLE_GW_MQTT_HOST=localhost
BLE_GW_MQTT_PORT=1883
BLE_GW_MQTT_USER=
BLE_GW_MQTT_PASSWORD=
BLE_GW_MQTT_TOPIC_PREFIX=cp02
# Keepalive interval in seconds (client sends PING to broker)
# Lower values = more frequent pings = more stable connection but more overhead
# Recommended: 30-60 for local broker, 60-120 for remote broker
BLE_GW_MQTT_KEEPALIVE=60

# ============ Server Configuration ============
BLE_GW_SERVER_HOST=0.0.0.0
BLE_GW_SERVER_PORT=5224

# ============ API Authentication ============
# Leave empty to disable authentication
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
BLE_GW_API_KEY=

# Header name for API key
BLE_GW_API_KEY_HEADER=X-API-Key

# ============ Gateway Timeout ============
# Seconds without heartbeat before marking gateway as offline
BLE_GW_GATEWAY_TIMEOUT_SECONDS=30

# ============ OTA Configuration ============
BLE_GW_OTA_UPLOAD_DIR=./ota_firmware
# Maximum firmware file size in bytes (4MB default)
BLE_GW_MAX_FIRMWARE_SIZE=4194304

# ============ Frontend Configuration ============
BLE_GW_FRONTEND_PATH=../frontend
